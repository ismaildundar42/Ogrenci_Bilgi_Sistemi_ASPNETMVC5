@using MvcOkulProject.Models.EntitiyFramework
@model List<tbl_dersler>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<table class="table table-bordered">
    <tr>
        <th>DERS ID</th>
        <th>DERS AD</th>
        <th>İŞLEMLER</th>
    </tr>
    @foreach (var x in Model)
    {

        <tr>
            <td>@x.DERSID</td>
            <td>@x.DERSAD</td>
            <td>
                <a href="/Default/DersSil/@x.DERSID" class="btn btn-danger">Sil</a>
                <a href="/Default/DersGetir/@x.DERSID" class="btn btn-warning">Güncelle</a>
            </td>
        </tr>
    }
</table>
